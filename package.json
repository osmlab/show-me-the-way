{
  "name": "show-me-the-way",
  "version": "0.0.0",
  "description": "see OSM edits happen in real time",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint": "eslint js/*.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "esbuild js/site.js --bundle --outfile=js/bundle.js --format=iife --target=es2020 --alias:util=./js/shims/util.js --alias:stream=./js/shims/stream.js --define:process.env={} --inject:./js/shims/buffer-global.js",
    "dev": "concurrently \"npm run build -- --watch\" \"serve\""
  },
  "repository": "",
  "author": "",
  "license": "BSD",
  "dependencies": {
    "buffer": "^6.0.3",
    "date-fns": "^4.1.0",
    "lru-cache": "^4.0.2",
    "mustache": "^4.2.0",
    "osm-stream": "github:osmlab/osm-stream#v0.0.15"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.1",
    "eslint": "^8.18.0",
    "serve": "^14.2.4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "maplibregl": "readonly"
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "2020"
    },
    "rules": {
      "camelcase": 2,
      "arrow-parens": 2,
      "no-var": 2,
      "space-before-function-paren": ["error", {
        "asyncArrow": "always",
        "anonymous": "never",
        "named": "never"
      }],
      "semi": "error",
      "semi-spacing": "error"
    }
  },
  "eslintIgnore": [
    "bundle.js"
  ]
}
